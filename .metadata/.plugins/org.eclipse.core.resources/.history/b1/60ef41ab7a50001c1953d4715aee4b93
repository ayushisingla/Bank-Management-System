package com.ayushi.authservice.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.ayushi.authservice.entity.Customer;
import com.ayushi.authservice.entity.LoginDetails;
import com.ayushi.authservice.repos.CustomerRepo;

@RestController
@RequestMapping("/authapi")
public class CustomerRegistrationController {

	@Autowired
	CustomerRepo repo;

	@RequestMapping(value = "/register", method = RequestMethod.POST)
	public Customer registerCustomer(@RequestBody Customer customer) {
		System.out.println("Registration method executed---");
		return repo.save(customer);
	}

	@RequestMapping(value = "/login", method = RequestMethod.POST)
	public String loginCustomer(@RequestBody LoginDetails loginDetails) {
		System.out.println("Login method executed---" + loginDetails.getUsername());
		repo.findByUsername(loginDetails.getUsername());
		List<Customer> originalPassword = repo.findByUsername(loginDetails.getUsername());
		if (loginDetails.getPassword().equals(originalPassword)) {
			return "Login Successful";
		} else {
			throw new LoginDetailsNotFoundException(
					"User details are not forund for user: " + loginDetails.getUsername());
		}

	}

	@GetMapping("/welcome")
	public String test() {
		return "Hello";
	}

}
